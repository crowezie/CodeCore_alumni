  <%= simple_form_for [@profile, @profile.skills.build], remote: true do |f| %>
  <%= f.input :name, label: "Name", placeholder: 'e.g. Ruby on Rails' %>
  <%= f.input :level, label: "Level", placeholder: '1 - 10' %>
  <%= f.button :submit, "Add a Skill", class: "btn btn-primary"%>
  <% end %>
  <ul class="list-inline pull-right">
  <li><button type="button" class="btn btn-danger prev-step">Previous</button></li>
  <li><button type="button" class="btn btn-danger next-step">Skip</button></li>
  <li>
    <button type="button" class="btn btn-danger btn-info-full next-step">Continue</button>
  </li>
  </ul>
